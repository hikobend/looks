<div class="top-new">
  <h1 class="top-new-title">質問は5つあります</h1>

  <%= form_with(modal: @top, url: tops_path, local: true) do |f| %>
    <div class="top-body">    
      <div class="field-form">
        <%= f.label :name, '名前を入力してください', class: 'question' %>
        <%= f.text_field :name, autofocus: true, placeholder: "name", class: "form-control form-control-lg" %>
      </div>

      <div class="field-form">
        <p class=question>朝型である</p>
        <%= f.radio_button :ques_one, true %>
        <%= f.label :ques_one, "はい(朝型)", {value: true, style: "display: inline-block;", class:"fs-5"} %>
        <%= f.radio_button :ques_one, false %>
        <%= f.label :ques_one, "いいえ(夜型)", {value: false, style: "display: inline-block;", class:"fs-5"} %>
      </div>

      <div class="field-form">
        <p class=question>話をする方が好きだ。</p>
        <%= f.radio_button :ques_two, '1' %>
        <%= f.label :ques_two, "はい(話をする方が好き)", {value: 1, style: "display: inline-block;", class:"fs-5"} %>
        <%= f.radio_button :ques_two, '0' %>
        <%= f.label :ques_two, "いいえ(聞く方が好き)", {value: 0, style: "display: inline-block;", class:"fs-5"} %>
      </div>

      <div class="field-form">
        <p class=question>人付き合いは、「広く浅く」である。</p>
        <%= f.radio_button :ques_three, '1' %>
        <%= f.label :ques_three, "はい(広く浅く)", {value: 1, style: "display: inline-block;", class:"fs-5"} %>
        <%= f.radio_button :ques_three, '0' %>
        <%= f.label :ques_three, "いいえ(狭く深く)", {value: 0, style: "display: inline-block;", class:"fs-5"} %>
      </div>
      
      <div class="field-form">
        <p class=question>行動は計画的である。</p>
        <%= f.radio_button :ques_four, '1' %>
        <%= f.label :ques_four, "はい(計画的に行動する)", {value: 1, style: "display: inline-block;", class:"fs-5"} %>
        <%= f.radio_button :ques_four, '0' %>
        <%= f.label :ques_four, "いいえ(偶発的に行動する)", {value: 0, style: "display: inline-block;", class:"fs-5"} %>
      </div>

      <div class="field-form">
        <p class=question>臨機応変に対応できる</p>
        <%= f.radio_button :ques_five, '1' %>
        <%= f.label :ques_five, "はい(臨機応変に対応できる)", {value: 1, style: "display: inline-block;", class:"fs-5"} %>
        <%= f.radio_button :ques_five, '0' %>
        <%= f.label :ques_five, "いいえ(計画に忠実)", {value: 0, style: "display: inline-block;", class:"fs-5"} %>
      </div>

      <div class="top-link d-grid gap-2">
        <%= f.submit "作成", class: 'nextpage btn btn-primary btn-lg' %>
      </div>

    </div>

  <% end %>
</div>
